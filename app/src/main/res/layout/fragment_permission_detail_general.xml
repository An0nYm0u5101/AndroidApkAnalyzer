<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="permission"
            type="sk.styk.martin.apkanalyzer.model.detail.PermissionData" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            style="@style/ItemDetailLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="sk.styk.martin.apkanalyzer.activity.permission.PermissionDetailActivity">

            <sk.styk.martin.apkanalyzer.view.DetailItemView
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                app:descriptionText="@string/permissions_name_description"
                app:titleText="@string/permissions_name"
                app:valueText="@{permission.name}" />

            <sk.styk.martin.apkanalyzer.view.DetailItemView
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                app:descriptionText="@string/permissions_group_description"
                app:titleText="@string/permissions_group"
                app:valueText="@{permission.groupName}"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:text="@{permission.description}"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</layout>