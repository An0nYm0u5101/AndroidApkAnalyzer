<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="detailItemViewStyle">@style/ItemDetail</item>
        <item name="detailListItemViewStyle">@style/ListItemDetail</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="detailItemViewStyle">@style/ItemDetail</item>
        <item name="detailListItemViewStyle">@style/ListItemDetail</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ItemDetail"  parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ItemDetailLayout"  parent="Widget.AppCompat.ListView">
        <item name="android:divider">?android:attr/listDivider</item>
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="ListItemDetail"  parent="ItemDetail">
        <item name="android:paddingTop">@dimen/padding_cardview_text</item>
        <item name="android:paddingBottom">@dimen/padding_cardview_text</item>
    </style>

    <style name="ItemDetailCardViewHeader">
        <item name="android:paddingLeft">@dimen/text_margin_right_left</item>
        <item name="android:paddingRight">@dimen/text_margin_right_left</item>
        <item name="android:paddingTop">@dimen/padding_cardview_text</item>
        <item name="android:paddingBottom">@dimen/padding_cardview_text</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
    </style>

    <style name="DetailCardView" parent="CardView">
        <item name="cardCornerRadius">0dp</item>
        <item name="useCompatPadding">true</item>
        <item name="android:paddingLeft">@dimen/text_margin_right_left</item>
        <item name="android:paddingRight">@dimen/text_margin_right_left</item>
        <item name="android:paddingTop">@dimen/padding_cardview_text</item>
        <item name="android:paddingBottom">@dimen/padding_cardview_text</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
    </style>

</resources>
